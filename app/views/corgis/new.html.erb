<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add your corgi</h3>
        <%= simple_form_for @corgi do |f| %>
          <%= f.input :name, placeholder: 'Name of corgi' %>
          <%= f.input :photo, as: :file %>
          <%= f.input :address, input_html: { data: { geocoder_target: "address" }, class: 'd-none'},
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= link_to 'back', corgis_path, class: "btn btn-ghost"%>
