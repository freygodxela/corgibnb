<div class="row">
    <% @corgis.each do |corgi| %>
      <div class="co-12 col-sm-6 col-md-4">
        <%= link_to corgi_path(corgi), class: "text-decoration-none" do %>
        <%= corgi.name %>
        <% if corgi.photo.attached?  %>
        <%= cl_image_tag corgi.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
