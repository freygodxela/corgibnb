<div class="container-corgi">
  <div class="cards">
    <% @corgis.each do |corgi| %>
      <div class="card-category">
        <%= link_to corgi_path(corgi), class: "text-decoration-none" do %>

        <% if corgi.photo.attached?  %>
        <%= cl_image_tag corgi.photo.key, height: 300, width: 400, crop: :fill, class:"new-card-img-top" %>
        <% end %>
        <% end %>
        <div class= "grid">
        <div class="index-card-body">
          <%= corgi.description %>
          <h1 class="index-card-title"><%= corgi.name.capitalize %></h1>
        </div>
      </div>
    <% end %>
   </div>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
